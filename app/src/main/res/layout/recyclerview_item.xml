<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/color_from_press_state"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="3dp"
    android:id="@+id/list">


    <ImageView
        android:id="@+id/sampleImg"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:layout_marginStart="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="MissingConstraints"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/sampleTxt"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sampleImg"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/sampleTxt2"
        android:layout_width="293dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/sampleImg"
        app:layout_constraintTop_toBottomOf="@+id/sampleTxt"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/sampleTxt3"
        android:layout_width="293dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/sampleImg"
        app:layout_constraintTop_toBottomOf="@+id/sampleTxt2"
        android:maxLines="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>